extends layout 

block content
  h1= title
  form(method='POST' action='/new')
    div.form-group
        label(for='name') Name:
        input#name.form-control(type='text' placeholder='name' name='name' required='true')
        p
        label(for='message') Message:
        input#message.form-control(type='text' placeholder='message' name='message' required='true')
        p
        button(type="submit") Submit
